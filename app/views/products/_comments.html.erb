<div class='product-reviews'>  
    <% @comments.each do |comment| %>
        <div >
            <hr>
            <p class='author'><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small> <p class='rating-1 rated' data-score="<%=comment.rating%>"></p> </p>
            <p><%= comment.body %></p>
        </div>
    <%end%>
</div>


