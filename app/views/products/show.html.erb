<%= javascript_include_tag('home.js') %>
<section class='product-body'>
<div class='center'>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<%= image_tag(@product.image_url, :class => 'preview-img')%>
<% if (@product.location != nil) %>
<p class='p'>
  <strong>Location:</strong>
  <%=@product.location%>
</p>
<% end%>
<%= link_to 'Go to Overview', products_path %>

</div>
</section>